{
  "manifest_version": 3,
  "name": "AdSpy Extension",
  "version": "1.0.0",
  "description": "Chrome extension for ad analysis and monitoring",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AdSpy Extension"
  },
  "content_scripts": [
    {
      "matches": ["*://blog.naver.com/*", "*://*.blog.naver.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["*://blog.naver.com/*", "*://*.blog.naver.com/*"]
    }
  ]
}
