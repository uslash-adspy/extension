{
  "manifest_version": 3,
  "name": "AdSpy Extension",
  "version": "1.0.0",
  "description": "Chrome extension for ad analysis and monitoring",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "AdSpy Extension"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}